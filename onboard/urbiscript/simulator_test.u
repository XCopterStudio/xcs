// bootstrap urbiscripts
load("boot/main.u");

var xci = XXci.new("xci_vrep");
var xcontrol = XControl.new();
var xhermit = XHermitMovement.new();

// xcontrol connections
xci.&velocity >> xcontrol.&velocity;
xci.&rotation >> xcontrol.&rotation;
xcontrol.&flyControl >> xci.&flyControl;

// xhermit connections
//   >> xhermit.&command;
//   >> xhermit.&checkpoint;
xci.&position >> xhermit.&dronePosition;
xci.&rotation >> xhermit.&droneRotation;
xhermit.&speedControl >> xcontrol.&desireSpeed; 
 
xci.xciInit();

sleep(4s);
xci.roll = 1;
sleep(10);
xci.roll = -1;
sleep(10);

var point = Checkpoint.new();
point.x = 0.0;
point.y = 1.0;
point.z = 1.0;
point.xOut = 0.0;
point.yOut = 0.0;
point.zOut = 0.0;

xhermit.checkpoint = point;

point.x = 1.0;
point.y = 1.0;
point.z = 1.0;
point.xOut = 0.0;
point.yOut = 0.0;
point.zOut = 0.0;

xhermit.checkpoint = point;

point.x = 0.0;
point.y = 0.0;
point.z = 1.0;
point.xOut = 0.0;
point.yOut = 0.0;
point.zOut = 0.0;

xhermit.checkpoint = point;